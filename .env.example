# =============================================================================
# Task Master AI Configuration
# =============================================================================
# API Keys (Required to enable respective provider)
ANTHROPIC_API_KEY="your_anthropic_api_key_here"       # Required: Format: sk-ant-api03-...
PERPLEXITY_API_KEY="your_perplexity_api_key_here"     # Optional: Format: pplx-...
OPENAI_API_KEY="your_openai_api_key_here"             # Optional, for OpenAI models. Format: sk-proj-...
GOOGLE_API_KEY="your_google_api_key_here"             # Optional, for Google Gemini models.
MISTRAL_API_KEY="your_mistral_key_here"               # Optional, for Mistral AI models.
XAI_API_KEY="YOUR_XAI_KEY_HERE"                       # Optional, for xAI AI models.
GROQ_API_KEY="YOUR_GROQ_KEY_HERE"                     # Optional, for Groq models.
OPENROUTER_API_KEY="YOUR_OPENROUTER_KEY_HERE"         # Optional, for OpenRouter models.
AZURE_OPENAI_API_KEY="your_azure_key_here"            # Optional, for Azure OpenAI models (requires endpoint in .taskmaster/config.json).
OLLAMA_API_KEY="your_ollama_api_key_here"             # Optional: For remote Ollama servers that require authentication.
GITHUB_API_KEY="your_github_api_key_here"             # Optional: For GitHub import/export features. Format: ghp_... or github_pat_...

# =============================================================================
# Application Configuration
# =============================================================================
NODE_ENV=development
APP_PORT=3000

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=flight_rescheduler
POSTGRES_PORT=5432

# Prisma Database URL (used by Prisma Client)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/flight_rescheduler"

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PORT=6379

# =============================================================================
# AWS Configuration (LocalStack for local development)
# =============================================================================
# For local development with LocalStack
AWS_ENDPOINT_URL="http://localhost:4566"
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test

# LocalStack Configuration
LOCALSTACK_PORT=4566
LOCALSTACK_SERVICES=sqs,sns,lambda,s3
LOCALSTACK_DEBUG=0
LAMBDA_EXECUTOR=docker

# =============================================================================
# AWS Amplify Auth Configuration
# =============================================================================
# See: https://docs.amplify.aws/react/build-a-backend/auth/
NEXT_PUBLIC_AMPLIFY_USER_POOL_ID=your_cognito_user_pool_id
NEXT_PUBLIC_AMPLIFY_USER_POOL_CLIENT_ID=your_cognito_client_id
NEXT_PUBLIC_AMPLIFY_REGION=us-east-1

# =============================================================================
# AI / OpenAI Configuration
# =============================================================================
# OpenAI API Key for AI-powered rescheduling (already defined above for Task Master)
# OPENAI_API_KEY="your_openai_api_key_here"

# =============================================================================
# Weather API Configuration
# =============================================================================
# OpenWeatherMap API Key (required for weather monitoring)
# Get your API key at: https://openweathermap.org/api
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Aviation Weather Center or other weather data provider (optional, for future use)
WEATHER_API_KEY=your_weather_api_key_here
WEATHER_API_URL=https://aviationweather.gov/api/data

# =============================================================================
# Notification Configuration
# =============================================================================
# AWS SNS Topic ARN for notifications (set after infrastructure deployment)
SNS_TOPIC_ARN=arn:aws:sns:us-east-1:000000000000:flight-lesson-notifications

# AWS SQS Queue URL for AI rescheduler (set after infrastructure deployment)
SQS_QUEUE_URL=http://localhost:4566/000000000000/weather-alerts-queue